<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="at.htl.leonding.robocertificatebuilder.controller.CertificateBuilderController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox spacing="5">
        <Label>Vorname: </Label>
        <TextField fx:id="txtFirstName"/>
    </HBox>

    <HBox spacing="5">
        <Label>Nachname: </Label>
        <TextField fx:id="txtLastName"/>
    </HBox>

    <HBox spacing="5">
        <Label>Geburtsdatum: </Label>
        <DatePicker fx:id="dpDob"/>
    </HBox>


    <HBox spacing="5">
        <Button fx:id="btnPic" text="Bild auswÃ¤hlen" onAction="#onPicClicked"/>
        <Button fx:id="btnPdf" text="PDF generieren" onAction="#onPdfClicked"/>
    </HBox>

    <VBox>
        <Label>Hint: Image size should be 640x480</Label>
        <Label fx:id="status"/>
    </VBox>
</VBox>
